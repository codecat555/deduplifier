version: "3.8"
services:
  web:
    build: .
    command: python manage.py runserver 0.0.0.0:8000
    volumes:
      - .:/code
    ports:
      - "___EXTERNAL_PORT___:___INSTANCE_PORT___"
    depends_on:
      - db

  db:
    image: postgres
    environment:
      - POSTGRES_DB=___APP_NAME___
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
